<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFasilkom"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.SignupActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/purista_bold"
        android:gravity="center"
        android:text="Aktivasi User"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/vetNama"
                    android:layout_weight="0.80"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama :"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/etNama"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/vetNpm"
                    android:layout_weight="0.80"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NPM :"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/etNpm"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
<!--            <EditText-->
<!--                android:id="@+id/etNama"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Nama"-->
<!--                android:inputType="text"-->
<!--                android:textSize="14sp" />-->

<!--            <EditText-->
<!--                android:id="@+id/etNpm"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="NPM"-->
<!--                android:inputType="number"-->
<!--                android:textSize="14sp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvFak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fakultas :"
                    android:layout_weight="0.84"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sFak"
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"></TextView>
<!--                <Spinner-->
<!--                    android:id="@+id/sFak"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_weight="0.2"-->
<!--                    android:layout_height="wrap_content" ></Spinner>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jurusan :"
                    android:layout_weight="0.84"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sProg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="14sp"></TextView>
<!--                <Spinner-->
<!--                    android:id="@+id/sProg"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:clickable="false"-->
<!--                    android:layout_weight="0.2"-->
<!--                    android:visibility="invisible"></Spinner>-->

            </LinearLayout>

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                android:inputType="text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etTlp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Telepon"
                android:inputType="number"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etCpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_rounded_corner"
                android:text="Aktivasi"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:gravity="center"
                android:text="Masuk Aplikasi" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>